<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lotti"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:lottie_autoPlay="true"
            app:lottie_fileName="dashed_first.json"
            app:lottie_imageAssetsFolder="images/"
            app:lottie_loop="false"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:background="@drawable/ic_getsetgoal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/rl_disable"
            android:text="date"
            android:gravity="center"
            android:background="@drawable/bg_rect_gray"
            android:maxLines="1"
            android:textSize="12dp"
            android:padding="3dp"
            android:textColor="@color/colorDarkGray"
             />

        <RelativeLayout
            android:id="@+id/rl_disable"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="20dp">

            <ImageView
                android:id="@+id/iv_disable"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_disabled" />

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="date"
            android:layout_toRightOf="@+id/rl_disable"
            android:layout_marginLeft="-95dp"
            android:background="@drawable/bg_rect_gray"
            android:maxLines="2"
            android:ellipsize="end"
            android:padding="3dp"
            android:textSize="12dp"
            android:layout_marginRight="40dp"
            android:textColor="@color/colorDarkGray"
            />

    </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>