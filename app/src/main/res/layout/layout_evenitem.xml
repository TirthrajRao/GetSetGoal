<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginStart="46dp"
    android:layout_marginEnd="46dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/iv_milestone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        android:scaleType="centerCrop"
        app:lottie_fileName="dashed_even.json"
        app:lottie_imageAssetsFolder = "images/"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="8dp"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvmstitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MS 1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tvmsmessage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ms1 details message"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_milestoneeven"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_disabled"
            android:layout_marginStart="36dp"
            android:layout_marginLeft="36dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_start"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        />

</RelativeLayout>
