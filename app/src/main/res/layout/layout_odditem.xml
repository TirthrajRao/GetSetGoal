    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/iv_lotiodd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        app:lottie_autoPlay="true"
        app:lottie_fileName="dashodd.json"
        app:lottie_imageAssetsFolder="images/"
        app:lottie_loop="false" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/iv_milestoneodd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginRight="36dp"
            android:src="@drawable/ic_disabled" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvmstitleodd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MS 1"
                android:textColor="@color/colorPrimary"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvmsmessageodd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ms1 details message"
                android:textColor="@color/colorBlack" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/iv_start"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_start"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:visibility="gone"
        />


</RelativeLayout>