    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/iv_lotiodd"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="false"
        android:scaleType="centerCrop"
        app:lottie_fileName="dashed_odd.json"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="10dp"
        app:lottie_imageAssetsFolder = "images/" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        >

        <ImageView
            android:id="@+id/iv_milestoneodd"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_disabled"
            android:layout_marginRight="36dp"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvmstitleodd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MS 1"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/tvmsmessageodd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ms1 details message"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>